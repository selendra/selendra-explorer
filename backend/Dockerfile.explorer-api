FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    ca-certificates \
    wget \
    libssl3 \
    nginx \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN wget -O /app/explorer-api https://github.com/selendra/selendra-explorer/releases/download/v-1.0.0/explorer-api \
    && chmod +x /app/explorer-api

# Configure nginx
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

# Start both nginx and your application
CMD nginx && /app/explorer-api