FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    ca-certificates \
    wget \
    libssl3 \
    socat \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN wget -O /app/explorer-api https://github.com/selendra/selendra-explorer/releases/download/v-1.0.0/explorer-api \
    && chmod +x /app/explorer-api

EXPOSE 3000

# Use socat to forward from all interfaces to localhost
CMD socat TCP-LISTEN:3000,fork TCP:127.0.0.1:3000 & /app/explorer-api